<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chinese"
    android:padding="48dp"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Seleccione su Año "
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="328dp"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbAño1"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="1900, 1912, 1924, 1936, 1948, 1960, 1972, 1984, 1996, 2008."
            android:textSize="10sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbAño2"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="1901, 1913, 1925, 1937, 1949, 1961, 1973, 1985, 1997, 2009."
            android:textSize="10sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbAño3"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="1902, 1914, 1926, 1938, 1950, 1951, 1962, 1974, 1986, 1998, 2010."
            android:textAllCaps="true"
            android:textSize="10sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbAño4"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="1903, 1915, 1927, 1939, 1951, 1963, 1975, 1987, 1999, 2011.."
            android:textSize="10sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbAño5"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="1904, 1916, 1928, 1940, 1952, 1964, 1976, 1988, 2000, 2012.."
            android:textSize="10sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbAño6"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="1905, 1917, 1929, 1941, 1953, 1965, 1977, 1989, 2001, 2013."
            android:textSize="10sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbAño7"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="1906, 1918, 1930, 1942, 1954, 1966, 1978, 1990, 2002, 2014."
            android:textSize="10sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbAño8"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="1907, 1919, 1931, 1943, 1955, 1967, 1979, 1991, 2003, 2015."
            android:textSize="10sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbAño9"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="1908, 1920, 1932, 1944, 1956, 1968, 1980, 1992, 2004, 2016."
            android:textSize="10sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbAño10"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="1909, 1921, 1933, 1945, 1957, 1969, 1981, 1993, 2005, 2017."
            android:textSize="10sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbAño11"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:checked="false"
            android:text="1910, 1922, 1934, 1946, 1958, 1970, 1982, 1994, 2006."
            android:textSize="10sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbAño12"
            android:layout_width="279dp"
            android:layout_height="21dp"
            android:checked="false"
            android:text="1911, 1923, 1947, 1959, 1971, 1983, 1995, 2007."
            android:textSize="10sp"
            android:textStyle="bold" />

    </RadioGroup>


    <Button
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_gravity="center"
        android:background="@android:color/holo_red_light"
        android:onClick="obtenerDatos"
        android:text="Obtener Datos"
        android:layout_weight="0.27" />

</LinearLayout>

